{# src/OC/PlatformBundle/Resources/view/Advert/view.html.twig #}

{% extends "EsorTestBundle::layout.html.twig" %}

{% block title %}
    Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block esor_test_body %}

    {% if advert.image is not null %}
        <img src="{{ advert.image.url }}" alt="{{ advert.image.alt }}">
    {% endif %}
    <h2>{{ advert.titre }}</h2>
    <i>Par {{ advert.auteur }}, le {{ advert.date|date('d/m/Y') }}</i>

    <div class="well">
        {{ advert.contenu }}
    </div>

    <p>
        <a href="{{ path('esor_test_home') }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour Ã  la liste
        </a>
        <a href="{{ path('esor_test_edit', {'id': advert.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-edit"></i>
            Modifier l'annonce
        </a>
        <a href="{{ path('esor_test_delete', {'id': advert.id}) }}" class="btn btn-danger">
            <i class="glyphicon glyphicon-trash"></i>
            Supprimer l'annonce
        </a>
    </p>

{% endblock %}