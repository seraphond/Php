

{% extends "EsorTestBundle::layout.html.twig" %}

{% block title %}
    Lecture d'une annonce - {{ parent() }}
{% endblock %}

{% block esor_test_body %}

    {% if advert.image is not null %}
        <img
                src="{{ asset(advert.image.webPath) }}"
                alt="{{ advert.image.alt }}"
        />
    {% endif %}
    <h2>{{ advert.titre }}</h2>
    <i>Par {{ advert.auteur }}, le {{ advert.date|date('d/m/Y') }}</i>

    <div class="well">
        {{ advert.contenu }}


    </div>

    {% if not advert.categories.empty %}
        <p>
            Cette annonce est parue dans les catégories suivantes :
            {% for category in advert.categories %}
                {{ category.name }}{% if not loop.last %}, {% endif %}
            {% endfor %}
        </p>
    {% endif %}

    <div>
        <ul class="nav nav-pills nav-stacked">
            {% for app in listApplications %}
                <li>
                    {{ app.author }} : {{ app.content }}
                </li>
            {% endfor %}
        </ul>

    </div>
    </br>
    <p>
        <a href="{{ path('esor_test_home') }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la liste
        </a>
        <a href="{{ path('esor_test_edit', {'id': advert.id}) }}" class="btn btn-default">
            <i class="glyphicon glyphicon-edit"></i>
            Modifier l'annonce
        </a>
        <a href="{{ path('esor_test_delete', {'id': advert.id}) }}" class="btn btn-danger">
            <i class="glyphicon glyphicon-trash"></i>
            Supprimer l'annonce
        </a>
    </p>

{% endblock %}